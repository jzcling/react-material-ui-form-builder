{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "build/dts"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts", "node_modules"
  ],
  "files": ["src/index.d.ts"]
}
